<h1>Create A Madlib!</h1>

<hr class="body">
<h3><%=@title%></h3>

<%= form_tag(madlibs_path) do%>
    
    <%= hidden_field_tag :template_index, @index%>
    <table>
    <% @blanks.each do |blank| %>
        <tr>
            <td class="mini"><%= label_tag 'pos', blank %></td>
            <td class="maxi"><%= text_field_tag 'blanks[]' %></td>
        </tr>
    <%end%>
    </table>
    <br>
    <%= submit_tag "Generate Madlib!"%>
<%end%>
<br>
<%= link_to 'cancel', root_path %>