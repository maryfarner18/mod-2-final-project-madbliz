<!DOCTYPE html>
<html>
  <head>
    <title>Madlibzzzz</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="nav-bar">
        <%= link_to 'Home', root_path %>
        <%= link_to 'Users', users_path %>
        <%= link_to 'Lib-like-mad', new_madlib_path %>
      </nav>
      <div class="errors">
        <% if flash[:errors] %>
            <ol>
          <% flash[:errors].each do |error|%>
              <li><%= error %></li>
          <% end %>
            </ol>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
