<!DOCTYPE html>
<html>
  <head>
    <title>MADLIB</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  </head>

  <body>
    <header>
      
      <%#NAVBAR%> 
      <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <%# The 'brand' bit %>
        <%= link_to 'MADLIBZ', root_path, class: "nav-brand" %>

        <%#collapse plugin and other navigation toggling behaviours%>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button> 

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item"><%= link_to 'Home', root_path, class: "nav-link" %> </li>
            <li class="nav-item"><%= link_to 'Profile', user_path(current_user), class: "nav-link" unless !logged_in? %></li>
            <li class="nav-item"><%= link_to 'Create!', new_madlib_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to 'Cart', cart_path, class: "nav-link" %></li>
          </ul>
        </div> <%# END COLLAPSE%>

      </nav>

      <div class="user_controls">
        <% if logged_in? %> 
          <div> Logged in as <%=current_user.user_name%> </div>
          <%=button_to 'Logout', logout_path %>
        <%else%>
          <div id='login'> <%= button_to 'Login', login_path, method: :get %></div>
        <%end%>
      </div>
        
      

      <div class="errors">
        <% if flash[:errors] %>
          <% flash[:errors].each do |error|%>
              <strong><%= error %></strong>
          <% end %>
        <% end %>
      </div>
    </header>

    
    <main>
    <div>
    <%= yield %>
    </div>
    </main>

  </body>
</html>
