<!DOCTYPE html>
<html>
  <head>
    <title>MADLIB</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC|Caveat|Gloria+Hallelujah|Permanent+Marker|Reenie+Beanie|Rock+Salt|Schoolbell&display=swap" rel="stylesheet">

    <!-- 
    font-family: 'Amatic SC', cursive;
    font-family: 'Permanent Marker', cursive;
    font-family: 'Gloria Hallelujah', cursive;
    font-family: 'Schoolbell', cursive;
    font-family: 'Rock Salt', cursive;
    font-family: 'Reenie Beanie', cursive;
    -->

  </head>

  <body>
    <header>
      
      <%#NAVBAR%> 
      <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <%# The 'brand' bit %>
        <%= link_to 'MADLIBZ', root_path, class: "nav-brand" %>

        <%#collapse plugin and other navigation toggling behaviours%>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button> 

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item"><%= link_to 'Home', root_path, class: "nav-link" %> </li>
            <li class="nav-item"><%= link_to 'Profile', user_path(current_user), class: "nav-link" unless !logged_in? %></li>
            <li class="nav-item"><%= link_to 'Create!', new_madlib_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to 'Cart', cart_path, class: "nav-link" %></li>
          </ul>
        </div> <%# END COLLAPSE%>

      </nav>

      <div class="user_controls navbar navbar-light bg-light">
  
        <% if logged_in? %>
          <span class="nav-item"> Logged in as <%=current_user.user_name%></span>
          <div class="nav-item"> <%= button_to 'Logout', logout_path %> </div>
        <%else%>
          <div class="nav-item"><%= link_to 'Login', login_path, class: "nav-link" %> </div>
        <%end%>
     
      </div> <%# END OF USER CONTROLS%>

    </header>

    <%# ERRORS %>
      <div class="errors">
          <% if flash[:errors] %>
            <% flash[:errors].each do |error|%>
                <strong><%= error %></strong>
            <% end %>
          <% end %>
      </div>


    <main>
    
      <%#PAGE CONTENT%>
      <div>
        <%= yield %>
    </main>

  </body>
</html>
