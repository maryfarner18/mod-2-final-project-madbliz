<!DOCTYPE html>
<html>
  <head>
    <title>Madlibzzzz</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="nav-bar">
        <%= link_to 'Home', root_path %>
        <%= link_to 'Users', users_path %>
        <%= link_to 'Lib-like-mad', new_madlib_path %>
        <%= link_to 'Cart', cart_path %>
        <br>
        <% if logged_in? %> 
          Logged in as <%=current_user.user_name%> <%=button_to 'Logout', logout_path %> 
        <%else%>
            <%= button_to 'Login', login_path, method: :get %>
        <%end%>
      </nav>
      <div class="errors">
        <% if flash[:errors] %>
          <% flash[:errors].each do |error|%>
              <strong><%= error %></strong>
          <% end %>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
